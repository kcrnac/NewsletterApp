@model List<Newsletter.Model.Users.User>

@{
    ViewBag.Title = "Index";
}

<h2>List of users</h2>

<div class="row">
    <div class="col-md-12 table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Full name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th></th>
                </tr>
            </thead>
        @foreach (var u in Model)
        {
            <tr class="user-table-row">
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.PhoneNumber</td>
                <td>@Html.ActionLink("Uredi", "Edit", new { id = u.Id }, new { @class = "btn btn-default"})</td>
            </tr>
        }
        </table>
    </div>
</div>

