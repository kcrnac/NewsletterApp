@model List<Newsletter.Model.Topics.Topic>

@{
    ViewBag.Title = "Index";
}

<h2>List of topics</h2>

<div class="row">
    <div class="col-md-12 table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var t in Model)
            {
                <tr class="topic-table-row">
                    <td>@t.Title</td>
                    <td>@t.Description</td>
                    <td>@t.Type.Caption</td>
                    <td>@Html.ActionLink("Uredi", "Edit", new { id = t.Id }, new { @class = "btn btn-default" })</td>
                </tr>
            }
        </table>
    </div>
</div>
